contract Affiliate is Ownable {
    struct User {
        address referrer;
        uint256 referralsCount;
    }

    mapping(address => User) public users;

    mapping(address => bool) operators;

    uint256 private ref_depth;

    event Upline(address indexed addr, address indexed upline);

    constructor() {}

    modifier onlyOperator() {
        require(operators[msg.sender], "Only operator can call this function");
        _;
    }
    function changeUpline(address _addr, address _upline) external onlyOperator {
        require(_upline != address(0), "Cannot refer to 0x0 address");
        require(_upline != _addr, "Cannot refer yourself");

        address oldUpline = users[_addr].referrer;
        if (oldUpline != address(0)) {
            users[oldUpline].referralsCount--;
        }

        users[_addr].referrer = _upline;
        users[_upline].referralsCount++;

        emit Upline(msg.sender, _upline);
    }

    function checkAffiliate(address _address) external view returns (uint256) {
        return users[_address].referralsCount;
    }

    function getUpline(address _addr) public view returns (address) {
        return users[_addr].referrer;
    }

    function setOperator(address _operator, bool _status) external onlyOwner {
        operators[_operator] = _status;
    }
