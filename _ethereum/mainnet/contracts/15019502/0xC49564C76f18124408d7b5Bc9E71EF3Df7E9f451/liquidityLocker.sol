pragma solidity 0.8.15;

import "./SafeERC20.sol";


contract NftaniaLiquidityLocker {
    using SafeERC20 for IERC20;

    IERC20 private token;
    address private immutable beneficiaryWallet;
    address private owner;
    string private beneficiaryName;
    uint private immutable unlockTime;

    constructor(string memory _beneficiaryName, uint256 _unlockTime, address _beneficiaryWallet) {
        owner = msg.sender;
        require (_beneficiaryWallet != address(0),"Liquiditylocker: beneficiary Wallet cannot be the address of zero");
        require(_unlockTime >= block.timestamp ,"Liquiditylocker: unlock Time should be in the future");
        beneficiaryWallet = _beneficiaryWallet; 
        beneficiaryName = _beneficiaryName;        
        unlockTime = _unlockTime;
    }

    fallback() external payable {}
    receive() external payable {}

    function setPairToken (IERC20 _token) public {
        require(owner == msg.sender,"Liquiditylocker: This function can be called by owner only");
        require (address(_token) != address(0),"Liquiditylocker: token cannot be the address of zero");
        token = _token;
    }

    function getInfo() public view virtual returns 
    (address _contractOwner, address _benefeciaryWallet, string memory _beneficiaryName,
        IERC20 _token, uint256 _unlockTime ,uint256 _remainingTime, uint256 _contractBalance) {
        require(address(token) != address(0),"Liquiditylocker: token is not set yet, token should defined in advance");
        _contractBalance = token.balanceOf(address(this));
        if (unlockTime > block.timestamp){_remainingTime = unlockTime - block.timestamp;} else {_remainingTime = 0;}
        return (owner, beneficiaryWallet, beneficiaryName, token, unlockTime, _remainingTime, _contractBalance);
    }

    function unlockTokens() public virtual returns (uint256 _amount, address _beneficiaryWallet){
        require(block.timestamp >= unlockTime,"liquidity Lock: Current time is before unlock time");
        require(address(token) != address(0),"Liquiditylocker: Token address is not set yet");
        _amount = token.balanceOf(address(this));
        token.safeTransfer(beneficiaryWallet, _amount);
        return (_amount, beneficiaryWallet);
    }

}