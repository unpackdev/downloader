interface IPenneyTax {
    function launchTaxContract() external;
    function launched() external view returns (bool);
    function transferWithSellTax(address sender, address recipient, uint256 amount) external;
}

interface IMiningContract {
    function launchMiningContract() external;
}

interface IOGReserve {
    function launchOGReserve() external;
}

contract Penney is ERC20,ERC20Burnable, Ownable, ReentrancyGuard {
    // Address of the treasury account
    address internal treasury;
    // Maximum tokens that can be minted
    uint256 public immutable maxTokensToMint = 6942000000000 ether;
    // Minimum total tokens
    uint256 public immutable minTotalTokens = 6942000000 ether;
        
    // Mapping to ensure some functions can only be called once
    mapping(string => bool) private calledOnce;

    // Addresses of associated contracts
    address internal miningContract;
    address internal ogReserveContract;
    address internal penneyTaxContract;

    // Modifier to ensure that a function can only be called once
    modifier onlyOnce(string memory functionName) {
        require(!calledOnce[functionName], "Function can only be called once");
        _;
    }

    // Modifier to restrict function access to only minting contracts
    modifier onlyMintingContracts() {
        require(msg.sender == penneyTaxContract || msg.sender == miningContract || msg.sender == ogReserveContract, "Only minting contracts can call");
        _;
    }

    // Events
    event TokensMinted(address indexed account, uint256 amount);
    event TreasuryMinted(address indexed account, uint256 amount);
    event TreasuryUpdated(address _treasury);
    event TransferDenied(address indexed from, address indexed to, uint256 amount, string reason);
    event BurnDenied(address indexed user, uint256 amount, string reason);
    event UnauthorizedAccess(address indexed accessor, string functionName, string reason);
    event RepeatedFunctionCall(address indexed caller, string functionName);
    
    // Constructor to initialize the contract with the treasury address
    constructor(address initialOwner) ERC20("Penney", "PENNEY") Ownable(initialOwner) payable {        
        treasury = initialOwner;
        transferOwnership(treasury); // Treasury is owner
    }

    // Function to fund the treasury by minting tokens
    function fundTreasury() external onlyOwner nonReentrant onlyOnce("fundTreasury") {
        
        if(calledOnce["fundTreasury"]) {
            emit RepeatedFunctionCall(msg.sender, "fundTreasury");
            revert("Function can only be called once");
        }
        uint256 totalSupply = totalSupply();
        uint256 remainingSupply = maxTokensToMint - totalSupply;
        require(remainingSupply != 0, "All tokens have been minted");
        uint256 treasuryAmount = (maxTokensToMint * 10) / 100; 
        _mint(treasury, treasuryAmount);
        emit TreasuryMinted(treasury, treasuryAmount);
        calledOnce["fundTreasury"] = true;
    }

    // Function to update the treasury address
    function updateTreasury(address _treasury) external payable onlyOwner nonReentrant {
        treasury = _treasury;
        transferOwnership(treasury);
        emit TreasuryUpdated(treasury);
    }   

    // Setter and launcher functions for associated contract addresses
    function setOGReserveContract(address _ogReserveContract) external onlyOwner nonReentrant{
        ogReserveContract = _ogReserveContract;
    }    
    function _launchOGReserve() external payable onlyOwner nonReentrant{
        require(ogReserveContract != address(0), "Address has not been set");
        IOGReserve(ogReserveContract).launchOGReserve();
    }

    function setMiningContract(address _miningContract) external onlyOwner nonReentrant{
        miningContract = _miningContract;
    }
    function _launchMining() external payable onlyOwner nonReentrant{
        require(miningContract != address(0), "Address has not been set");
        IMiningContract(miningContract).launchMiningContract();
    }

    function setTaxContract(address _penneyTaxContract) external onlyOwner nonReentrant{
        penneyTaxContract = _penneyTaxContract;
    }
    function _launchTax() external payable onlyOwner nonReentrant{
        require(penneyTaxContract != address(0), "Address has not been set");
        IPenneyTax(penneyTaxContract).launchTaxContract();
    }

    // Function to mint tokens, restricted to only minting contracts
    function mintMinedTokens(address to, uint256 amount) external onlyMintingContracts nonReentrant {
        if (balanceOf(to) + amount > getMaxWalletSize()) {
            emit TransferDenied(address(this), msg.sender, amount, "Would exceed max wallet size");
            revert("Would exceed max wallet size");
        }

        if(msg.sender != penneyTaxContract && msg.sender != miningContract && msg.sender != ogReserveContract) {
            emit UnauthorizedAccess(msg.sender, "mintMinedTokens", "Only minting contracts can call");
            revert("Unauthorized contract");
        }
        _mint(to, amount);
    }

    // Ensures the maxWalletSize is based on the number of tokens minted so far, taking into consideration tokens that have been burned.
    function getMaxWalletSize() public view returns (uint256) {
        uint256 burntSupply = maxTokensToMint - totalSupply();
        uint256 mintedSupply = maxTokensToMint - burntSupply;

        return ((mintedSupply * 1) / 10000); // 1% of 1% of the minted supply
    }

    // Function to execute a transfer with sell tax applied
    function _transferWithSellTax(address sender, address recipient, uint256 amount) internal {
        if(penneyTaxContract != address(0) && IPenneyTax(penneyTaxContract).launched()) {
            IPenneyTax(penneyTaxContract).transferWithSellTax(sender, recipient, amount);
        } else {        
            uint256 taxAmount = (amount * 1) / 100; // 1%
            _transfer(sender, treasury, taxAmount);            
            _transfer(sender, recipient, amount - taxAmount);
        }
    }

    // Overridden transfer function to apply sell tax
    function transfer(address recipient, uint256 amount) public override returns (bool) {
        
        if ((balanceOf(recipient) + amount) > getMaxWalletSize()) {
            emit TransferDenied(msg.sender, recipient, amount, "Would exceed max wallet size");
            revert("Would exceed max wallet size");
        }

        _transferWithSellTax(msg.sender, recipient, amount);
        return true;
    }

    function penneyTransfer(address from, address to, uint256 amount) external onlyMintingContracts nonReentrant {
        _transfer(from, to, amount);
    }

    // Overridden burn function to apply burn to supply, which in turn enforces reduction of maxWalletsize
    function burn(uint256 amount) public virtual override {      

        uint256 newSupply = totalSupply() - amount;
        if(newSupply < minTotalTokens) {
            emit BurnDenied(msg.sender, amount, "Would reduce supply < minimum");
            revert("Burn amount exceeds allowed limit");
        }
        super.burn(amount);
    }

    // Function to withdraw stuck ERC-20 tokens from the contract
    function withdrawToken(address _token) external payable onlyOwner nonReentrant{
        IERC20(_token).transfer(owner(), IERC20(_token).balanceOf(address(this)));
    }

    // Function to withdraw any Ether stuck in the contract
    function withdrawEther() external onlyOwner nonReentrant{
        payable(owner()).transfer(address(this).balance);
    }
}