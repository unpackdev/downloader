/**
 * @dev This contract locks Uni V3 LP position.
 * Tokens collected as LP fees by teh contract are burnt.
 */
contract LPBurner {
    
    address public caller;
    address public v3PositionManager = 0xC36442b4a4522E871399CD717aBDD847Ab11FE88;
    address internal xdEaD = 0x000000000000000000000000000000000000dEaD;
    IERC20 public token0 = IERC20(0xcc1016bA261D89003B9b4a547b50931A8B5bf79E);
    IERC20 public token1 = IERC20(0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2); // WETH 
    bool public isBurnt;

    modifier onlyCaller() {
        require(msg.sender == caller, "Only caller can call");
        _;
    }

    constructor() { 
        caller = msg.sender;
        isBurnt = false;
    }

    //
    // once the LP NFT is transferred to this contract it can't ever move again
    //
    function burnLP(uint256 _tokenId) external onlyCaller {
        require(!isBurnt, "LP already locked forever");
        IERC721(v3PositionManager).transferFrom(msg.sender, address(this), _tokenId); 
        isBurnt = true;
    }

    function redeem(uint256 _tokenId) external onlyCaller {
        IERC721(v3PositionManager).transferFrom(address(this), msg.sender, _tokenId);
    }

    function collectAndBurn(uint256 _tokenId) external onlyCaller {
        INonfungiblePositionManager.CollectParams memory params =
            INonfungiblePositionManager.CollectParams({
                tokenId: _tokenId,
                recipient: address(this),
                amount0Max: type(uint128).max,
                amount1Max: type(uint128).max
            });

        (uint256 amount0, uint256 amount1) = INonfungiblePositionManager(v3PositionManager).collect(params);

        token0.transfer(xdEaD, amount0); // token
        token1.transfer(caller, amount1); // weth
    }

    function pendingFees(uint256 _tokenId) external view returns(uint256) {
        ( , , , , , , , , , , , uint128 wethPending ) = INonfungiblePositionManager(v3PositionManager).positions(_tokenId);
        return wethPending;
    }

    function changeOwner(address newOwner) external onlyCaller {
        require(newOwner != address(0), "Invalid new owner address");
        caller = newOwner;
    }
}