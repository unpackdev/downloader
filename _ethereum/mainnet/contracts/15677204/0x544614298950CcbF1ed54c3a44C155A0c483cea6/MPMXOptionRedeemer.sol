pragma solidity 0.8.17;
import "./Ownable.sol";
import "./ReentrancyGuard.sol";
import "./IERC721.sol";
import "./IERC20.sol";
import "./IMPMX.sol";
import "./IMPO.sol";
contract MPMXOptionRedeemer is Ownable, ReentrancyGuard
{
    struct UserHoldings
    {
        uint[] _TokenIDs;         // [0] -> _TokenIDs
        uint[] _ArtistIDs;        // [1] -> _ArtistIDs
        uint _FinalClearingPrice; // [2] -> _FinalClearingPrice
    }
    uint public CurrentMappingIndex;
    uint private immutable FinalClearingPrice = 2219350073855243723;
    address private immutable Option = 0x08ebADbc44F0f76CAFC6FD49e53247Cc9798eddD;
    address private immutable Operator = 0xe06F5FAE754e81Bc050215fF89B03d9e9FF20700;
    address private immutable MPMX = 0x51992c5CD2E8A282d5fD21731Af6BFaA0C0B1E57; 
    mapping(uint=>mapping(uint=>uint)) public OptionMapping;
    event OptionRedeemed(uint[] TokenIDs, address Recipient);

    /**
     * @dev Transfers Ownership To `operator.brightmoments.eth`
     */
    constructor() { _transferOwnership(0xe06F5FAE754e81Bc050215fF89B03d9e9FF20700); }
    
    /**
     * @dev Redeems Option
     */
    function RedeemOption(uint[] calldata TokenIDs) external payable nonReentrant
    {
        require(msg.value == FinalClearingPrice * TokenIDs.length, "MPMX: Invalid Message Value");
        for(uint OptionTokenID; OptionTokenID < TokenIDs.length; OptionTokenID++)
        {
            require(IERC721(Option).ownerOf(TokenIDs[OptionTokenID]) == msg.sender, "ERC721: User Does Not Own OptionTokenID");
            IMPO(Option)._RedeemOption(TokenIDs[OptionTokenID]); 
            IERC721(MPMX).transferFrom(Operator, msg.sender, OptionMapping[CurrentMappingIndex][TokenIDs[OptionTokenID]]);
        }
        emit OptionRedeemed(TokenIDs, msg.sender);
    }

    /**
     * @dev Seeds Option Mapping
     */
    function SeedOptionMapping(uint[] calldata OptionTokenIDs, uint[] calldata MPMXTokenIDs) external onlyOwner
    {
        require(OptionTokenIDs.length == MPMXTokenIDs.length, "MPMX: Array Lengths Must Match");
        CurrentMappingIndex++;
        for(uint x; x < MPMXTokenIDs.length; x++) { OptionMapping[CurrentMappingIndex][OptionTokenIDs[x]] = MPMXTokenIDs[x]; }
    }

    /**
     * @dev Returns Clearing Price
     */
    function ViewPrice() public pure returns (uint) { return FinalClearingPrice; }

    /**
     * @dev Returns A Wallet's Owned `TokenIDs` & Corresponding `ArtistIDs`
     */
    function ViewWalletOptionHoldings(address Wallet, uint Range) public view returns (UserHoldings memory _Holdings)
    {
        unchecked
        {
            uint[] memory __TokenIDsOwned = new uint[](Range);
            uint NumOwned;
            for(uint x; x < Range; x++)
            {
                try IERC721(Option).ownerOf(x)
                {
                    if(IERC721(Option).ownerOf(x) == Wallet)
                    {
                        __TokenIDsOwned[NumOwned] = x;
                        NumOwned++;
                    }
                } catch { }
            }
            uint[] memory _TokenIDsOwned = new uint[](NumOwned);
            for(uint x; x < NumOwned; x++) { _TokenIDsOwned[x] = __TokenIDsOwned[x]; }
            return UserHoldings(_TokenIDsOwned, IMPMX(MPMX).ViewArtistIDsByTokenIDs(_TokenIDsOwned), FinalClearingPrice);
        }
    }

    /**
     * @dev Withdraws Any Ether Mistakenly Sent to Contract to Multisig
     */
    function __WithdrawEther() external onlyOwner { payable(msg.sender).transfer(address(this).balance); }

    /**
     * @dev Withdraws Ether To Address
     */
    function ___WithdrawEtherToAddress(address payable Recipient) external onlyOwner
    {
        (bool Success, ) = Recipient.call{value: address(this).balance}("");
        require(Success, "Unable to Withdraw, Recipient May Have Reverted");
    }

    /**
     * @dev Withdraws ERC20 Tokens to Multisig
     */
    function __WithdrawERC20(address TokenAddress) external onlyOwner 
    { 
        IERC20 erc20Token = IERC20(TokenAddress);
        uint balance = erc20Token.balanceOf(address(this));
        require(balance > 0, "0 ERC20 Balance At `TokenAddress`");
        erc20Token.transfer(msg.sender, balance);
    }

    /**
     * @dev Withdraws Any NFT Mistakenly Sent To This Contract.
     */
    function __WithdrawERC721(address ContractAddress, address Recipient, uint TokenID) external onlyOwner
    {
        IERC721(ContractAddress).transferFrom(address(this), Recipient, TokenID);
    }
}