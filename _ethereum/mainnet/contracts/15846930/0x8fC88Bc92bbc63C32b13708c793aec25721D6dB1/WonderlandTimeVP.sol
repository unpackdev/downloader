contract WonderlandTimeVP {
    using SafeMath for uint256;
    IERC20 public constant wMEMO = IERC20(0x3b79a28264fC52c7b4CEA90558AA0B162f7Faf57);
    uint256 public constant Index = 2339352253931;

    function name() external pure returns (string memory) { return "Grapes Power"; }
    function symbol() external pure returns (string memory) { return "GVP"; }
    function decimals() external pure returns (uint8) { return 9; }
    function allowance(address, address) external pure returns (uint256) { return 0; }
    function approve(address, uint256) external pure returns (bool) { return false; }
    function transfer(address, uint256) external pure returns (bool) { return false; }
    function transferFrom(address, address, uint256) external pure returns (bool) { return false; }

    /**
        @notice converts wMEMO amount to TIME
        @param _amount uint
        @return uint
     */
    function wMEMOToTIME( uint _amount ) public pure returns ( uint ) {
        return _amount.mul(Index).div( 10 ** 18 );
    }

    // Make Wonderland üçá again!
    function balanceOf(address account) external view returns (uint256 grapes) {
        uint256 balance = wMEMO.balanceOf(account);
        grapes =  wMEMOToTIME(balance);
    }
}