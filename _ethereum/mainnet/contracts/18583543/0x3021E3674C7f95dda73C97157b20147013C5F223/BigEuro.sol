    function viewTicketNumbers(uint256 ticketID)
        external
        view
        returns (uint256)
    {
        return _tickets[ticketID].number;
    }

    function viewTicketOwner(uint256 ticketID) external view returns (address) {
        return _tickets[ticketID].owner;
    }

    function userTicketIdsPerLotteryId(address user, uint256 ticketId)
