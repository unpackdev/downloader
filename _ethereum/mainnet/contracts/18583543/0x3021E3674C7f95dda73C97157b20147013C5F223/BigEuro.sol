    uint256 public amountFromLotto;
    uint256 public bigEuroAmount;

    uint256 public currentLotteryId;
    uint256 public currentTicketId;

    IERC20 public token;
    address public signer;
    uint256 public expiry = 300;
    uint256 public ticketPrice = 150e6;
    uint256 public minRange = 1000000000;
    uint256 public maxRange = 1999999999;

    uint256 public maxNumber = type(uint256).max;

    address public LottoGame;

    bytes32 private constant _PERMIT_TYPEHASH =
        keccak256("Permit(address user,uint256 value,uint256 nonce)");

    enum Status {
        Open,
        Close,
        Claimable
    }

    struct Lottery {
        Status status;
        uint256 startTime;
        uint256 endTime;
        uint256 amountCollected;
        uint256 firstTicketId;
        uint256 firstTicketIdNextLottery;
        uint256 finalNumber;
    }

    struct Ticket {
        uint256 number;
        address owner;
    }

    mapping(address => Counters.Counter) private _nonces;
    mapping(address => bool) public isUserBlackListed;
    mapping(uint256 => Lottery) private _lotteries;
    mapping(uint256 => Ticket) private _tickets;
    mapping(uint256 => mapping(uint256 => bool)) public claimed;

    // Keep track of user ticket ids for a given lotteryId
    mapping(address => mapping(uint256 => uint256[]))
        public _userTicketIdsPerLotteryId;

    modifier NotContract(address _account) {
        require(!_account.isContract(), "Address not be Contract Address");
        _;
    }

    modifier IsContract(address _account) {
        require(_account.isContract(), "Address not be user Address");
        _;
    }

    modifier isZeroAddress(address _addr) {
        require(_addr != address(0), "0!");
        _;
    }

    modifier needValue(uint256 _value) {
        require(_value > 0, "0!");
        _;
    }

    modifier isBlackListed(address user) {
        require(!isUserBlackListed[user], "user black listed!");
        _;
    }

    event LotteryOpen(
        uint256 indexed lotteryId,
        uint256 ticketPrice,
        uint256 startTime,
        uint256 endTime,
        uint256 firstTicketId
    );
    event BatchBlackWhiteList(
        address[] indexed _user,
        bool[] indexed _isBlackListed,
        uint256 modifiedTime
    );
    event SetSigner(address indexed user, address indexed signer, uint256 time);
    event SetToken(address indexed user, address _token, uint256 time);
    event TicketsPurchase(
        address indexed buyer,
        uint256 indexed lotteryId,
        uint256 numberTickets
    );
    event LotteryInjection(
        uint256 indexed lotteryId,
        uint256 injectedAmount,
        uint256 time
    );
    event LotteryClose(
        uint256 indexed lotteryId,
        uint256 firstTicketIdNextLottery,
        uint256 time
    );
    event LotteryNumberDrawn(
        uint256 indexed lotteryId,
        uint256 finalNumber,
        uint256 cashFlowAmount,
        uint256 time
    );
    event UpdatePercentage(
        uint256 WinnersRewardPercentage,
        uint256 BigEuroPercentage,
        uint256 CashFlowPercentage,
        uint256 time
    );
    event Fallback(address indexed user, uint256 amount, uint256 time);
    event UpdateTicketPrice(address indexed user, uint256 price, uint256 time);
    event UpdateStartEndTime(
        uint256 currentLotteryID,
        uint256 startTime,
        uint256 endTime
    );
    event TicketRewardsClaim(
        address indexed claimer,
        uint256 amount,
        uint256 indexed lotteryId,
        uint256 ticketID,
        uint256 bigEuroAmount,
        uint256 time
    );
    event Retrieve(
        address token,
        address indexed user,
        uint256 amount,
        uint256 time
    );

    constructor(
        address _depositToken,
        address _signer,
        address _cashFlowTokenLock
    ) EIP712("OneDefiBigEuro", "1.0") {
        setToken(_depositToken);
        setSigner(_signer);

        cashFlowTokenLock = IDeposit(_cashFlowTokenLock);
    }

    modifier LottoGameOnly() {
        require(_msgSender() == LottoGame, "LottoGame only accessible");
        _;
    }

    function updateCashFlow(address _cashFlowTokenLock)
        external
        onlyOwner
        isZeroAddress(_cashFlowTokenLock)
        IsContract(_cashFlowTokenLock)
    {
        cashFlowTokenLock = IDeposit(_cashFlowTokenLock);
    }

    function setLottoAddress(address _addr)
        public
        onlyOwner
        isZeroAddress(_addr)
    {
        LottoGame = _addr;
    }

    function lock(uint256 _amount)
        external
        whenNotPaused
        LottoGameOnly
        needValue(_amount)
    {
        token.safeTransferFrom(LottoGame, address(this), _amount);
        amountFromLotto += _amount;
    }

    function updateStartEndTime(uint256 _startTime, uint256 _endTime)
        external
        onlyOwner
    {
        require(
            _lotteries[currentLotteryId].status == Status.Open,
            "Lottery not open"
        );
        require(
            block.timestamp < _lotteries[currentLotteryId].startTime,
            "Lottery started"
        );
        require(block.timestamp < _startTime, "!start time");
        require(
            block.timestamp < _endTime && _startTime < _endTime,
            "!endTime"
        );
        _lotteries[currentLotteryId].startTime = _startTime;
        _lotteries[currentLotteryId].endTime = _endTime;
        emit UpdateStartEndTime(currentLotteryId, _startTime, _endTime);
    }

    function startLottery(uint256 _startTime, uint256 _endTime)
        external
        onlyOwner
    {
        require(block.timestamp < _startTime, "Invalid start time");
        require(
            block.timestamp < _endTime && _startTime < _endTime,
            "Invalid endTime"
        );
        require(
            bigEuroNextYear + rewardPercentage + cashFlow == 100,
            "Invalid percentage"
        );
        require(
            (currentLotteryId == 0) ||
                (_lotteries[currentLotteryId].status == Status.Claimable),
            "Not time to start lottery"
        );

        currentLotteryId++;

        _lotteries[currentLotteryId] = Lottery({
            status: Status.Open,
            startTime: _startTime,
            endTime: _endTime,
            amountCollected: 0,
            firstTicketId: currentTicketId,
            firstTicketIdNextLottery: currentTicketId,
            finalNumber: 0
        });

        emit LotteryOpen(
            currentLotteryId,
            ticketPrice,
            _startTime,
            _endTime,
            currentTicketId
        );
    }

    function buyTickets(
        uint256 _lotteryId,
        uint256[] calldata _ticketNumbers,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external whenNotPaused isBlackListed(_msgSender()) {
        require(_ticketNumbers.length != 0, "No ticket specified");
        require(
            _lotteries[_lotteryId].status == Status.Open,
            "Lottery is not open"
        );
        require(
            _lotteries[_lotteryId].startTime < block.timestamp,
            "Lottery is not yet started"
        );
        require(
            block.timestamp < _lotteries[_lotteryId].endTime,
            "Lottery is over"
        );
        bytes32 hash = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    _PERMIT_TYPEHASH,
                    _msgSender(),
                    _lotteryId,
                    _useNonce(_msgSender())
                )
            )
        );
        require(signer == ECDSA.recover(hash, v, r, s), "Invalid signature");

        uint256 amountUSDTtoTransfer = _calculateTotalPriceForBulkTickets(
            _ticketNumbers.length,
            ticketPrice
        );

        IERC20(token).safeTransferFrom(
            _msgSender(),
            address(this),
            amountUSDTtoTransfer
        );

        _lotteries[_lotteryId].amountCollected += amountUSDTtoTransfer;

        for (uint256 i = 0; i < _ticketNumbers.length; i++) {
            require(
                (_ticketNumbers[i] >= minRange) &&
                    (_ticketNumbers[i] <= maxRange),
                "Outside range"
            );
            _tickets[currentTicketId] = Ticket({
                number: _ticketNumbers[i],
                owner: _msgSender()
            });
            require(
                !claimed[_lotteryId][_tickets[currentTicketId].number],
                "Ticket no. already bought"
            );
            claimed[_lotteryId][_tickets[currentTicketId].number] = true;

            _userTicketIdsPerLotteryId[_msgSender()][_lotteryId].push(
                currentTicketId
            );

            // Increase lottery ticket number
            currentTicketId++;
        }

        emit TicketsPurchase(_msgSender(), _lotteryId, _ticketNumbers.length);
    }

    function _calculateTotalPriceForBulkTickets(
        uint256 _numberTickets,
        uint256 _ticketPrice
    ) public pure returns (uint256) {
        return (_numberTickets * _ticketPrice);
    }

    function drawFinalNumberAndMakeLotteryClaimable(
        uint256 _lotteryId,
        uint256 _winningNumbers
    ) external onlyOwner needValue(_winningNumbers) {
        require(
            _lotteries[_lotteryId].status == Status.Close,
            "Lottery not close"
        );

        _lotteries[_lotteryId].finalNumber = _winningNumbers;

        uint256 amountToCashFlow;
        amountToCashFlow =
            ((_lotteries[_lotteryId].amountCollected +
                amountFromLotto +
                bigEuroAmount) * cashFlow) /
            100;

        _lotteries[_lotteryId].status = Status.Claimable;
        token.safeApprove(address(cashFlowTokenLock), amountToCashFlow);
        cashFlowTokenLock.deposit(amountToCashFlow);
        emit LotteryNumberDrawn(
            currentLotteryId,
            _winningNumbers,
            amountToCashFlow,
            block.timestamp
        );
    }

    function claimTicketsReward(uint256 _lotteryId, uint256 _ticketId)
        external
        whenNotPaused
        nonReentrant
        isBlackListed(_msgSender())
    {
        require(_msgSender() == _tickets[_ticketId].owner, "Not the owner");

        require(
            _lotteries[_lotteryId].status == Status.Claimable,
            "Lottery not claimable"
        );

        require(
            _lotteries[_lotteryId].finalNumber == _tickets[_ticketId].number,
            "No prize for this ticket"
        );

        // Initializes the rewardInUSDTToTransfer
        uint256 rewards;
        rewards =
            ((_lotteries[_lotteryId].amountCollected +
                amountFromLotto +
                bigEuroAmount) * rewardPercentage) /
            100;

        // Transfer money to msg.sender
        token.safeTransfer(_msgSender(), rewards);

        bigEuroAmount =
            ((_lotteries[_lotteryId].amountCollected +
                amountFromLotto +
                bigEuroAmount) * bigEuroNextYear) /
            100;

        amountFromLotto = 0;

        // Update the lottery ticket owner to 0x address
        _tickets[_ticketId].owner = address(0);

        emit TicketRewardsClaim(
            _msgSender(),
            rewards,
            _lotteryId,
            _ticketId,
            bigEuroAmount,
            block.timestamp
        );
    }

    function injectFunds(uint256 _lotteryId, uint256 _amount)
        external
        onlyOwner
    {
        require(
            _lotteries[_lotteryId].status == Status.Open,
            "Lottery not open"
        );

        token.safeTransferFrom(address(_msgSender()), address(this), _amount);
        _lotteries[_lotteryId].amountCollected += _amount;

        emit LotteryInjection(_lotteryId, _amount, block.timestamp);
    }

