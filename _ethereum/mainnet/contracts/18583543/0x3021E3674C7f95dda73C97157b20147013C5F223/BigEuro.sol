    function closeLottery(uint256 _lotteryId) external onlyOwner nonReentrant {
        require(
            currentLotteryId >= _lotteryId && _lotteryId != 0,
            "Invalid ID"
        );
        require(
            _lotteries[_lotteryId].status == Status.Open,
            "Lottery not open"
        );
        require(
            block.timestamp > _lotteries[_lotteryId].endTime,
            "Lottery not over"
        );

        _lotteries[_lotteryId].firstTicketIdNextLottery = currentTicketId;
        _lotteries[_lotteryId].status = Status.Close;
        emit LotteryClose(_lotteryId, currentTicketId, block.timestamp);
    }

    function updateTicketPrice(uint256 _ticketPrice)
        external
        onlyOwner
        needValue(_ticketPrice)
    {
        ticketPrice = _ticketPrice;
        emit UpdateTicketPrice(_msgSender(), _ticketPrice, block.timestamp);
    }

    function updatePercentage(
        uint256 _rewardForWinners,
        uint256 _bigEuroPercentage,
        uint256 _cashFlowPercentage
    ) external onlyOwner {
        require(
            _lotteries[currentLotteryId].status == Status.Open,
            "Lottery not open"
        );
        require(
            block.timestamp < _lotteries[currentLotteryId].startTime,
            "Lottery started"
        );
        require(
            _rewardForWinners + _bigEuroPercentage + _cashFlowPercentage == 100
        );
        rewardPercentage = _rewardForWinners;
        bigEuroNextYear = _bigEuroPercentage;
        cashFlow = _cashFlowPercentage;
        emit UpdatePercentage(
            _rewardForWinners,
            _bigEuroPercentage,
            _cashFlowPercentage,
            block.timestamp
        );
    }

    function setToken(address _token)
        internal
        isZeroAddress(_token)
        IsContract(_token)
    {
        token = IERC20(_token);
        emit SetToken(_msgSender(), _token, block.timestamp);
    }

    function setSigner(address _signer)
        internal
        isZeroAddress(_signer)
        NotContract(_signer)
        isBlackListed(_signer)
    {
        signer = _signer;
        emit SetSigner(_msgSender(), _signer, block.timestamp);
    }

