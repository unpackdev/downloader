    }

    function _useNonce(address owner)
        internal
        virtual
        returns (uint256 current)
    {
        Counters.Counter storage nonce = _nonces[owner];
        current = nonce.current();
        nonce.increment();
        return current;
    }

    function batchBlackOrWhiteListUsers(
        address[] memory users,
        bool[] memory isBlackList
    ) external onlyOwner {
        require(users.length == isBlackList.length && users.length > 0, "0");
        for (uint8 i = 0; i < users.length; i++) {
            if (isBlackList[i]) {
                require(
                    !isUserBlackListed[users[i]],
                    "user already blacklisted!"
                );
                isUserBlackListed[users[i]] = true;
            } else {
                require(
                    isUserBlackListed[users[i]],
                    "user not blacklisted yet!"
                );
                isUserBlackListed[users[i]] = false;
            }
        }
        emit BatchBlackWhiteList(users, isBlackList, block.timestamp);
    }

    function nonces(address user) external view returns (uint256) {
        return _nonces[user].current();
    }

    function retrieve(
        address _token,
        address _to,
        uint256 _amount
    )
        external
        onlyOwner
        isZeroAddress(_to)
        isBlackListed(_to)
        needValue(_amount)
    {
        if (_token != address(0x0) && _token.isContract()) {
            require(
                IERC20(_token).balanceOf(address(this)) >= _amount,
                "Not enough Amount"
            );
            IERC20(_token).safeTransfer(_to, _amount);
        } else {
            require(address(this).balance >= _amount, "Not enough eth");
            require(payable(_to).send(_amount), "Transaction failed");
        }
        emit Retrieve(address(_token), _to, _amount, block.timestamp);
    }
