contract BasdStaking is Ownable, ReentrancyGuard, Pausable {
    using EnumerableSet for EnumerableSet.AddressSet;
    using SafeERC20 for IERC20;

    // Events
    event RewardsTransferred(address holder, uint256 amount);

    IERC20 public stakingToken;
    uint256 public totalStaked = 0;
    // reward rate 25% per year
    uint256 public rewardRate = 2500;
    uint256 public constant rewardInterval = 365 days;
    uint256 public maxStakingAllowance = 100000000 * (10**18); // 10%

    // unstaking possible after 7 days
    uint256 public cliffTime = 7 days;

    uint256 public totalClaimedRewards = 0;

    EnumerableSet.AddressSet private holders;

    struct UserInfo {
        uint256 depositedTokens;
        uint256 stakingStartTime;
        uint256 lastClaimedTime;
        uint256 totalEarnedTokens;
    }

    mapping(address => UserInfo) public userInfo;

    constructor(address _stakingToken) {
        stakingToken = IERC20(_stakingToken);
    }

    function updateAccount(address account) private {
        uint256 pendingDivs = getPendingDivs(account);
        UserInfo storage user = userInfo[account];

        if (pendingDivs > 0) {
            // To protect everyone's funds, let's not allow withdrawing more than the remaining balance
            uint256 stakingBalance = stakingToken.balanceOf(address(this));
            uint256 availableRewards = stakingBalance - totalStaked;
            require(
                pendingDivs < availableRewards,
                "The team needs to top up this contract for this action to proceed."
            );
            stakingToken.safeTransfer(account, pendingDivs);
            user.totalEarnedTokens = user.totalEarnedTokens + pendingDivs;
            totalClaimedRewards = totalClaimedRewards + pendingDivs;
            emit RewardsTransferred(account, pendingDivs);
        }
        user.lastClaimedTime = block.timestamp;
    }

    function getPendingDivs(address _holder) public view returns (uint256) {
        UserInfo storage user = userInfo[_holder];
        if (!holders.contains(_holder)) return 0;
        if (user.depositedTokens == 0) return 0;

        uint256 timeDiff = block.timestamp - user.lastClaimedTime;
        uint256 stakedAmount = user.depositedTokens;

        uint256 pendingDivs = (stakedAmount * rewardRate * timeDiff) /
            rewardInterval /
            1e4;

        return pendingDivs;
    }

    function getNumberOfHolders() public view returns (uint256) {
        return holders.length();
    }

    function deposit(uint256 amountToStake) public whenNotPaused nonReentrant {
        UserInfo storage user = userInfo[address(msg.sender)];
        require(amountToStake > 0, "Cannot deposit 0 Tokens");
        require(
            totalStaked + amountToStake <= maxStakingAllowance,
            "Amount is greater than the staking allowance"
        );
        stakingToken.safeTransferFrom(address(msg.sender), address(this), amountToStake);

        updateAccount(msg.sender);

        user.depositedTokens = user.depositedTokens + amountToStake;

        totalStaked = totalStaked + amountToStake;

        if (!holders.contains(msg.sender)) {
            holders.add(msg.sender);
            user.stakingStartTime = block.timestamp;
        }
    }

    function withdraw(uint256 amountToWithdraw) public nonReentrant {
        UserInfo storage user = userInfo[address(msg.sender)];
        require(
            user.depositedTokens >= amountToWithdraw,
            "Invalid amount to withdraw"
        );

        require(
            block.timestamp - user.stakingStartTime > cliffTime,
            "You recently staked, please wait before withdrawing."
        );

        updateAccount(msg.sender);

        stakingToken.safeTransfer(address(msg.sender), amountToWithdraw);

        user.depositedTokens = user.depositedTokens - amountToWithdraw;

        totalStaked = totalStaked - amountToWithdraw;

        if (holders.contains(msg.sender) && user.depositedTokens == 0) {
            holders.remove(msg.sender);
        }
    }

    function claimDivs() public nonReentrant {
        updateAccount(msg.sender);
    }

    // Management functions
    function setRewardRate(uint256 _rewardRate) external onlyOwner {
        rewardRate = _rewardRate;
    }

    function setCliffTime(uint256 _cliffTime) external onlyOwner {
        require(
            _cliffTime < 14 days,
            "Cliff time cannot be longer than 14 days"
        );
        cliffTime = _cliffTime;
    }

    function setMaxStakingAllowance(uint256 _maxStakingAllowance)
        external
        onlyOwner
    {
        maxStakingAllowance = _maxStakingAllowance;
    }

    // Added to support recovering LP Rewards from other systems such as BAL to be distributed to holders
    function recoverERC20(address tokenAddress, uint256 tokenAmount)
        external
        onlyOwner
    {
        require(
            tokenAddress != address(stakingToken),
            "Cannot withdraw the staking token"
        );
        IERC20(tokenAddress).safeTransfer(owner(), tokenAmount);
    }

    // This function will allow the team to withdraw the tokens available for reward
    function emergencyWithdraw() external onlyOwner {
        uint256 stakingBalance = stakingToken.balanceOf(address(this));
        uint256 availableRewards = stakingBalance - totalStaked;
        require(availableRewards > 0, "No rewards to wthdraw.");
        stakingToken.safeTransfer(owner(), availableRewards);
    }
}