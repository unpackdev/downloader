    bytes32 private constant PERMIT_MINT_TYPEHASH = keccak256("PermitMint(address mintAdmin,address account,uint256 value,uint256 orderId,uint256 deadline)");

    function _getFinalTokenStorage() private pure returns (FinalTokenStorage storage $) {
        assembly {
            $.slot := FinalTokenStorageLocation
        }
    }

    event MintAdminChanged(address indexed oldAdmin, address indexed newAdmin);
    event PermitMintProcessed(uint256 orderId, bool UsedOrCancel);

    error FinalTokenMintInvalidAdmin(address admin);
    error FinalTokenMintInvalidSigner(address signer, address mintAdmin);
    error RenounceOwnershipUnauthorized();

    function __FinalToken_init(address initMintAdmin) internal onlyInitializing {
        __FinalToken_init_unchained(initMintAdmin);
    }

    function __FinalToken_init_unchained(address initMintAdmin) internal onlyInitializing {
        if (initMintAdmin == address(0)) {
            revert FinalTokenMintInvalidAdmin(address(0));
        }
        _updateMintAdmin(initMintAdmin);
    }

    modifier onlyMintAdmin() {
        require(_msgSender() == mintAdmin(), "FinalToken: caller is not the mint admin");
        _;
    }

    constructor() {
        _disableInitializers();
    }

    function init(string calldata name_, string calldata symbol_, address initOwner_, address initBlacklistAdmin_, address initMintAdmin_) initializer public {
        __Pausable_init();
        __ERC20Permit_init(name_);
        __Blacklistable_init(initOwner_, initBlacklistAdmin_);
        __ERC20_init(name_, symbol_);
        __FinalToken_init(initMintAdmin_);
    }

    function _update(address from, address to, uint256 value) internal virtual override whenNotPaused notBlacklisted(from) notBlacklisted(to) {
        super._update(from, to, value);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function renounceOwnership() public virtual override onlyOwner {
        if (mintAdmin() != address(0) || blacklistAdmin() != address(0)) {
            revert RenounceOwnershipUnauthorized();
        }
        super.renounceOwnership();
    }

    function mintAdmin() public view returns (address) {
        FinalTokenStorage storage $ = _getFinalTokenStorage();
        return $._mintAdmin;
    }

    function updateMintAdmin(address _newMintAdmin) public onlyOwner {
        if (_newMintAdmin == address(0)) {
            revert FinalTokenMintInvalidAdmin(address(0));
        }
        _updateMintAdmin(_newMintAdmin);
    }

    function renounceMintAdmin() public onlyOwner {
        _updateMintAdmin(address(0));
    }

    function _updateMintAdmin(address _newMintAdmin) internal {
        FinalTokenStorage storage $ = _getFinalTokenStorage();
        address oldMintAdmin = $._mintAdmin;
        $._mintAdmin = _newMintAdmin;
        emit MintAdminChanged(oldMintAdmin, _newMintAdmin);
    }

    function mint(address account, uint256 value) external onlyMintAdmin {
        _mint(account, value);
    }

    function permitMintState(uint256 orderId) public view returns (bool) {
        FinalTokenStorage storage $ = _getFinalTokenStorage();
        return $._permitMintState[orderId];
    }

    function cancelPermitMint(uint256 orderId) external onlyMintAdmin {
        _changePermitMintState(orderId, false);
    }

    function _changePermitMintState(uint256 orderId, bool UseOrCancel) internal {
        FinalTokenStorage storage $ = _getFinalTokenStorage();
        require(!$._permitMintState[orderId], "FinalToken: orderId has been used or cancelled");
        
        $._permitMintState[orderId] = true;
        emit PermitMintProcessed(orderId, UseOrCancel);
    }

    function permitMint(
        address account,
        uint256 value,
        uint256 orderId,
        uint256 deadline,
        bytes memory signature
    ) public virtual {
        require(block.timestamp < deadline, "FinalToken: expired deadline");

        address _mintAdmin = mintAdmin();
        bytes32 hash = permitMintHash(_mintAdmin, account, value, orderId, deadline);
        address signer = ECDSA.recover(hash, signature);
        if (signer == address(0) || signer != _mintAdmin) {
            revert FinalTokenMintInvalidSigner(signer, _mintAdmin);
        }

        _changePermitMintState(orderId, true);
        _mint(account, value);
    }

    function batchPermitMint(
        address[] calldata accounts,
        uint256[] calldata values,
        uint256[] calldata orderIds,
        uint256[] calldata deadlines,
        bytes[] memory signatures
    ) public virtual {
        require(accounts.length == values.length && accounts.length == orderIds.length, "FinalToken: length mismatch");
        require(accounts.length == deadlines.length && accounts.length == signatures.length, "FinalToken: length mismatch");

        for (uint256 i = 0; i < accounts.length; ++i) {
            permitMint(accounts[i], values[i], orderIds[i], deadlines[i], signatures[i]);
        }
    }

    function permitMintHash(
        address permiter,
        address account,
        uint256 value,
        uint256 orderId,
        uint256 deadline
    ) public view returns (bytes32) {
        bytes32 structHash = keccak256(abi.encode(PERMIT_MINT_TYPEHASH, permiter, account, value, orderId, deadline));
        bytes32 hash = _hashTypedDataV4(structHash);
        return hash;
    }
}