    //Wallets that receive pool funds
    address public walletOne;
    address public walletTwo;
    address public walletThree;

    //Percentages associated with each wallet receiving funds
    uint public percentageOne;
    uint public percentageTwo;
    uint public percentageThree;

    //Setting variables for maximum amount of tokens the pool can receive, minimum contribution per user & the current amount of tokens in the pool
    uint public poolMax;
    uint public minCon;
    uint public currentPoolAmount;

    //Blockchain address of the token to be accepted (for USDC on Ethereum=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48)
    address public tokenAddress;

    //Variable to activate or desavtivate a smart contract
    bool public isActive;

    //Mapping contributions of the users to their address
    mapping (address => uint) public contributions; 

    //Events
    event walletOneSet(address walletAddress);
    event walletTwoSet(address walletAddress);
    event walletThreeSet(address walletAddress);

    event percentageSet(uint percentage1, uint percentage2, uint percentage3);
    event poolMaxSet(uint max);
    event tokenAddressSet(address tokenContractAddress);
    event minConSet(uint minContribution);

    event Contributed(address contributor, uint amount);

    event Activated(address activator);



    constructor(){

        isActive=true;

    }

    /**
     * @notice this is a function which allows the owner to pause and start the pool at any point in time
     * @dev This function can only be called by the owner of the smart contract. Call transfer ownership if you wish to use a different wallet.
     */    

    function activate() external onlyOwner{

        isActive=!isActive;

        emit Activated(msg.sender);

    }   

    /**
     * @notice setter function to determine wallet number ONE that will be receiving the funds
     * @param _walletOne : the address of the first wallet which will be receiving the tokens
     * @dev This function can only be called by the owner of the smart contract. Call transfer ownership if you wish to use a different wallet.
     */

    function setWalletOne(address _walletOne) external onlyOwner {

        walletOne=_walletOne;
        emit walletOneSet(_walletOne);
    }

