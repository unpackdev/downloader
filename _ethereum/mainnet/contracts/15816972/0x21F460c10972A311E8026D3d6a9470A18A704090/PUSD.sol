contract PUSD is ERC20, ReentrancyGuard {
	using SafeMath for uint256;
	using SafeERC20 for IERC20;
	
	mapping (address => bool) public allowedToken;
	
	uint256 public _decimal = 18;
	
	constructor () public ERC20() {
		allowedToken[0xdAC17F958D2ee523a2206206994597C13D831ec7] = true; // USDT ERC20
		allowedToken[0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48] = true; // USDC ERC20
		allowedToken[0x4Fabb145d64652a948d72533023f6E7A623C7C53] = true; // BUSD ERC20
		allowedToken[0x0000000000085d4780B73119b644AE5ecd22b376] = true; // TUSD ERC20
	}
	
	event Deposit(address indexed user, address token, uint256 amount);
	event Withdraw(address indexed user, address token, uint256 amount);
	
	function deposit(address depositToken, uint256 _amount) external nonReentrant{
		require(allowedToken[depositToken], 'Token are not Allowed for Swap');
		
		uint256 tokenAmount = _getTokenAmount(address(depositToken), _amount);
		
		IERC20(depositToken).safeTransferFrom(msg.sender, address(this), tokenAmount);
		_mint(msg.sender, _amount);
		
		emit Deposit(msg.sender, address(depositToken), _amount);
    }
		
	function withdraw(address withdrawToken, uint256 _amount) external nonReentrant{
		require(allowedToken[withdrawToken], 'Token are not Allowed for Swap');
		
		uint256 tokenAmount = _getTokenAmount(withdrawToken, _amount);
		require(IERC20(withdrawToken).balanceOf(address(this)) >=  tokenAmount, 'Token: insufficient balance');
		
		_burn(msg.sender, _amount);
		IERC20(address(withdrawToken)).safeTransfer(msg.sender, tokenAmount);
		
		emit Withdraw(msg.sender, address(withdrawToken), _amount);
    }
		
	function _getTokenAmount(address _tokenAddress, uint256 _amount) public view returns (uint256 quotient) {
				
		IERC20 tokenAddress = IERC20(_tokenAddress);
		uint256 tokenDecimal = tokenAddress.decimals();
		uint256 decimalDiff;
		uint256 decimalDiffConverter;
		uint256 amount;
			
		if(_decimal != tokenDecimal){
			if(_decimal > tokenDecimal){
				decimalDiff = _decimal - tokenDecimal;
				decimalDiffConverter = 10**decimalDiff;
				amount = _amount.div(decimalDiffConverter);
			} else {
				decimalDiff = tokenDecimal - _decimal;
				decimalDiffConverter = 10**decimalDiff;
				amount = _amount.mul(decimalDiffConverter);
			}		
		} else {
			amount = _amount;
		}
		
		uint256 _quotient = amount;
		
		return (_quotient);
    }
}